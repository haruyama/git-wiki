<% if @pages.empty? %>
  <h1>No pages yet</h1>
<% else %>
  <h1>All pages</h1>

  <div class="content">
    <ul>
      <% @pages.each do |page| %>
        <li>
          <strong><a href="/<%= h page.uri_encoded_name %>"><%= h page.name %></a></strong> &mdash;
          <a href="/e/<%= h page.uri_encoded_name %>">edit</a> &bull;
          <a href="/h/<%= h page.uri_encoded_name %>">history</a> &bull;
          <a href="javascript:var q; if (window.getSelection) q=window.getSelection(); else if (document.selection) q=document.selection.createRange().text; if (q != '') location.href='<%= h page_url(page.name) %>/append?text='+encodeURIComponent(q+' (from &quot;'+document.title+'&quot;:'+location.href+')'); else location.href='<%= h page_url(page.name) %>/append?text='+encodeURIComponent('&quot;'+document.title+'&quot;:'+location.href);" title="Click to save current page in browser to '<%= h page.name %>' page.  Select text to save it along with the link.">bookmarklet</a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
