<article>

  <aside>
    <a href="/<%= h @page.uri_encoded_name %>" class="nav_link">current</a> &bull;
    <a href="/e/<%= h @page.uri_encoded_name %>" class="nav_link">edit</a>
  </aside>

  <h1>History of <a href="/<%= h @page.uri_encoded_name %>"><%= h @page.name %></a></h1>

  <ul>
  <% @page.history.each do |c| %>
    <li>
      <img src="http://gravatar.com/avatar/<%= h Digest::MD5.hexdigest(c.author.email.downcase) %>?s=12&d=identicon"/>
      <script type="text/javascript">
      document.write(time_ago_in_words(<%= c.committer_date.to_json %>) + ' ago');
      </script>
      &mdash;
      <a href="/h/<%= h @page.uri_encoded_name %>/<%= h c.sha %>"><%= h c.message %></a>
      <% unless @page.history.first == c %>
        &bull; <a href="/d/<%= h @page.uri_encoded_name %>/<%= h c.sha %>">diff</a>
      <% end %>
    </li>
  <% end %>
  </ul>
</article>
