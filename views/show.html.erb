<article>

  <aside>
    <% if params[:rev] %>
      <a href="/<%= h @page.uri_encoded_name %>" class="nav_link">current</a> &bull;
    <% else %>
      <a href="/e/<%= h @page.uri_encoded_name %>" class="nav_link">edit</a> &bull;
    <% end %>
    <a href="/h/<%= h @page.uri_encoded_name %>" class="nav_link">history</a>
    <% if @page.previous_commit %>
      &bull; <a href="/h/<%= h @page.uri_encoded_name %>/<%= h @page.previous_commit %>" class="nav_link">older</a>
    <% end %>
    <% if @page.next_commit %>
      &bull; <a href="/h/<%= h @page.uri_encoded_name %>/<%= h @page.next_commit %>" class="nav_link">newer</a>
    <% end %>

    <section class="details">
      <script type="text/javascript">
        document.write(time_ago_in_words(<%= h @page.updated_at.to_json %>) + ' ago');
      </script>
      <br />
      <%= h $repo.current_branch %> branch
    </section>
  </aside>

  <header><h1><%= h @page.name %></h1></header>

  <%= @page.body %>
</article>
